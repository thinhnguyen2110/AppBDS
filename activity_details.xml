<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details">

    <ImageView
        android:id="@+id/hinh_bds"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/blue"
        />
    <TextView
        android:id="@+id/ten_bds"
        android:layout_below="@id/hinh_bds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="ten bds"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/mota_bds"
        android:layout_below="@id/ten_bds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="mo ta"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/gia_bds"
        android:layout_below="@id/mota_bds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="gia bds"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>